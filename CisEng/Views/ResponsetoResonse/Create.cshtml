@model CisEng.Models.responsetorespone

@{
    ViewData["Title"] = "Create";
}
<link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/lib/twitter-bootstrap/js/bootstrap.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/froala-editor@3.0.0-beta.1/css/froala_editor.pkgd.min.css" rel="stylesheet" type="text/css" />

<!-- Include Editor JS files. -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/froala-editor@3.0.0-beta.1//js/froala_editor.pkgd.min.js"></script>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display:none">
                <label asp-for="idofresponse" class="control-label"></label>
                <input asp-for="idofresponse" value="@ViewData["idofresponse"]" class="form-control" />
                <span asp-validation-for="idofresponse" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="idofstudent" class="control-label"></label>
                <input asp-for="idofstudent" value="@ViewData["idofstudent"]" class="form-control" />
                <span asp-validation-for="idofstudent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Containt" class="control-label">Containt</label>
                <textarea name="Containt" id="Containt" asp-for="Containt" class="form-control" >
                </textarea>
                <span asp-validation-for="Containt" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="time" class="control-label"></label>
                <input asp-for="time" value="@DateTime.Now" name="time" class="form-control" />
                <span asp-validation-for="time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script>
    new FroalaEditor('#Containt', {
        // Set the image upload URL.
        imageUploadURL: '/UploadFiles',

        imageUploadParams: {
            id: 'my_editor'
        }
    })
</script>

