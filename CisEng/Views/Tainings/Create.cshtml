@model CisEng.Models.Taining

@{
    ViewData["Title"] = "Create";
 
}

<link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/lib/twitter-bootstrap/js/bootstrap.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/froala-editor@3.0.0-beta.1/css/froala_editor.pkgd.min.css" rel="stylesheet" type="text/css" />

<!-- Include Editor JS files. -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/froala-editor@3.0.0-beta.1//js/froala_editor.pkgd.min.js"></script>

<hr />
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="technology" class="control-label">Technology</label>
                    <select asp-for="technology" class="form-control" name="technology">
                        <option value="Android">
                            Android
                        </option>
                        <option value="WebDevelopment">
                            WebDevelopment
                        </option>
                        <option value="Machinlearning">
                            Machinlearning
                        </option>
                    </select>
                    <span asp-validation-for="technology" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="place" class="control-label">place</label>
                    <input asp-for="place" class="form-control" name="place" />
                    <span asp-validation-for="place" class="text-danger"></span>
                </div>
                <div class="form-group" style="display:none">
                    <label asp-for="time" class="control-label"></label>
                    <input asp-for="time" name="time" class="form-control" value="@DateTime.Now" />
                    <span asp-validation-for="time" class="text-danger"></span>
                </div>
                <div class="form-group" style="display:none">
                    <label asp-for="sponser" class="control-label"></label>
                    <input asp-for="sponser" name="sponser" class="form-control" value="@ViewData["sponser"]" />
                    <span asp-validation-for="sponser" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Containt" class="control-label">Containt</label>
                    <textarea  id="Containt" name="Containt" class="form-control"></textarea>
                    <span asp-validation-for="Containt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    new FroalaEditor('#Containt', {
        // Set the image upload URL.
        imageUploadURL: '/UploadImage',

        imageUploadParams: {
            id: 'my_editor'
        },
        fileUploadURL: '/UploadFiles',

        fileUploadParams: {
            id: 'my_editor'
        }
    })
</script>